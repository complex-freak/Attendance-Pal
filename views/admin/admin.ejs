<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reports & Analytics</title>
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .sidebar {
            height: 100vh;
            background-color: #343a40;
            padding-top: 20px;
        }
        .sidebar a {
            color: #ffffff;
            display: block;
            padding: 10px 20px;
            text-decoration: none;
        }
        .sidebar a:hover {
            background-color: #495057;
        }
        .sidebar .active {
            background-color: #007bff;
        }
        .content {
            padding: 20px;
        }
        .card {
            margin-bottom: 20px;
        }
        .header {
            background-color: #343a40;
            color: #ffffff;
            padding: 10px;
        }
        .header .navbar-brand {
            color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar col-md-2 bg-dark">
            <div class="sidebar-header d-flex justify-content-between align-items-center p-3">
                <h3 class="text-white mb-0">Menu</h3>
                <button class="btn btn-outline-light" id="sidebarCollapse" type="button">
                    <i class="fa fa-bars"></i>
                </button>
            </div>
            <div class="list-group list-group-flush">
                <a href="/dashboard" class="list-group-item list-group-item-action bg-dark text-white"><i class="fa fa-tachometer"></i> Dashboard</a>
                <a href="/user-management" class="list-group-item list-group-item-action bg-dark text-white"><i class="fa fa-users"></i> User Management</a>
                <a href="/reports-analytics" class="list-group-item list-group-item-action bg-dark text-white active"><i class="fa fa-file-text"></i> Reports & Analytics</a>
                <a href="/college-management" class="list-group-item list-group-item-action bg-dark text-white"><i class="fa fa-university"></i> College Management</a>
                <a href="/logs-management" class="list-group-item list-group-item-action bg-dark text-white"><i class="fa fa-book"></i> Logs Management</a>
                <a href="/settings" class="list-group-item list-group-item-action bg-dark text-white"><i class="fa fa-cogs"></i> Settings</a>
                <a href="/logout" class="list-group-item list-group-item-action bg-dark text-white"><i class="fa fa-sign-out"></i> Logout</a>
            </div>
        </nav>

        <!-- Main Content -->
        <div id="content" class="content col-md-10">
            <!-- Header -->
            <div class="header d-flex justify-content-between align-items-center">
                <h2 class="navbar-brand">Reports & Analytics</h2>
                <div>
                    <input type="date" id="startDate" class="form-control d-inline-block" style="width: auto;">
                    <span class="text-white mx-2">to</span>
                    <input type="date" id="endDate" class="form-control d-inline-block" style="width: auto;">
                    <button class="btn btn-primary" id="filterButton">Filter</button>
                </div>
            </div>

            <!-- Key Metrics -->
            <div class="row mt-4">
                <div class="col-md-3">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <h5 class="card-title">Total Attendance</h5>
                            <p class="card-text"><%= totalAttendance %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <h5 class="card-title">Average Attendance</h5>
                            <p class="card-text"><%= averageAttendance %>%</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <h5 class="card-title">Top Performer</h5>
                            <p class="card-text"><%= topPerformer %></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card text-white bg-danger">
                        <div class="card-body">
                            <h5 class="card-title">Lowest Performer</h5>
                            <p class="card-text"><%= lowestPerformer %></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Attendance Analysis Dropdown -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Attendance Analysis</h5>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    View Analysis By
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <li><a class="dropdown-item" href="/reports-analytics/college">College</a></li>
                                    <li><a class="dropdown-item" href="/reports-analytics/department">Department</a></li>
                                    <li><a class="dropdown-item" href="/reports-analytics/course">Course</a></li>
                                    <li><a class="dropdown-item" href="/reports-analytics/subject">Subject</a></li>
                                    <li><a class="dropdown-item" href="/reports-analytics/student">Individual Student</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Attendance Over Time</h5>
                            <canvas id="attendanceChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Performance by Subject</h5>
                            <canvas id="performanceChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Generate Report Section -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Generate Report</h5>
                            <form action="/generate-report" method="POST">
                                <div class="mb-3">
                                    <label for="reportType" class="form-label">Report Type</label>
                                    <select class="form-select" id="reportType" name="reportType">
                                        <option value="attendance">Attendance Report</option>
                                        <option value="performance">Performance Report</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="format" class="form-label">Format</label>
                                    <select class="form-select" id="format" name="format">
                                        <option value="csv">CSV</option>
                                        <option value="excel">Excel</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Generate & Download</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5.3 JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Example data for charts (replace with dynamic data)
        const attendanceCtx = document.getElementById('attendanceChart').getContext('2d');
        const attendanceChart = new Chart(attendanceCtx, {
            type: 'line',
            data: {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                datasets: [{
                    label: 'Attendance',
                    data: [85, 90, 88, 92],
                    borderColor: 'rgba(54, 162, 235, 1)',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    fill: true,
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        const performanceCtx = document.getElementById('performanceChart').getContext('2d');
        const performanceChart = new Chart(performanceCtx, {
            type: 'bar',
            data: {
                labels: ['Math', 'Science', 'History', 'English'],
                datasets: [{
                    label: 'Average Score',
                    data: [75, 80, 70, 85],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Filter button logic
        document.getElementById('filterButton').addEventListener('click', function () {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            if (startDate && endDate) {
                window.location.href = `/reports-analytics?startDate=${startDate}&endDate=${endDate}`;
            } else {
                alert('Please select both start and end dates.');
            }
        });
    </script>
</body>
</html>
