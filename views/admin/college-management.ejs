<%- include('../partials/adminHeader') %>

<div class="container-fluid">
    <div class="row">
        <%- include('../components/adminSidebar') %>

        <div class="content col-md-10 mt-3">
            <h1 class="text-center">College Management</h1>
    
            <!-- Add New College Form -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Add New College</h5>
                    <form action="/admin/college" method="POST">
                        <div class="mb-3">
                            <label for="college-name" class="form-label">College Name</label>
                            <input type="text" class="form-control" id="college-name" name="name" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Add College</button>
                    </form>
                </div>
            </div>
    
            <!-- List of Colleges -->
            <% if (colleges.length > 0) { %>
                <% colleges.forEach(college => { %>
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= college.name %>
                                <!-- Edit College Form -->
                                <form action="/admin/college/<%= college._id %>?_method=PUT" method="POST" class="d-inline">
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="name" value="<%= college.name %>" required>
                                        <button class="btn btn-success" type="submit">Edit</button>
                                    </div>
                                </form>
                                <!-- Delete College Form -->
                                <form action="/admin/college/<%= college._id %>?_method=DELETE" method="POST" class="d-inline">
                                    <button class="btn btn-danger" type="submit">Delete</button>
                                </form>
                            </h5>
    
                            <!-- Departments, Courses, Subjects Display -->
                            <div class="accordion" id="college-accordion-<%= college._id %>">
                                <% college.departments.forEach(department => { %>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id="heading-department-<%= department._id %>">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-department-<%= department._id %>" aria-expanded="false" aria-controls="collapse-department-<%= department._id %>">
                                                <%= department.name %>
                                            </button>
                                        </h2>
                                        <div id="collapse-department-<%= department._id %>" class="accordion-collapse collapse" aria-labelledby="heading-department-<%= department._id %>" data-bs-parent="#college-accordion-<%= college._id %>">
                                            <div class="accordion-body">
                                                <!-- Add New Course Form -->
                                                <form action="/admin/department/<%= department._id %>/course" method="POST" class="mb-3">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" name="name" placeholder="New Course Name" required>
                                                        <button class="btn btn-primary" type="submit">Add Course</button>
                                                    </div>
                                                </form>
                                                
                                                <% department.courses.forEach(course => { %>
                                                    <div class="card mb-2">
                                                        <div class="card-body">
                                                            <h5 class="card-title">
                                                                <%= course.name %>
                                                                <!-- Edit Course Form -->
                                                                <form action="/admin/course/<%= course._id %>?_method=PUT" method="POST" class="d-inline">
                                                                    <div class="input-group">
                                                                        <input type="text" class="form-control" name="name" value="<%= course.name %>" required>
                                                                        <button class="btn btn-success" type="submit">Edit</button>
                                                                    </div>
                                                                </form>
                                                                <!-- Delete Course Form -->
                                                                <form action="/admin/course/<%= course._id %>?_method=DELETE" method="POST" class="d-inline">
                                                                    <button class="btn btn-danger" type="submit">Delete</button>
                                                                </form>
                                                            </h5>
    
                                                            <!-- Add New Subject Form -->
                                                            <form action="/admin/course/<%= course._id %>/subject" method="POST" class="mb-3">
                                                                <div class="input-group">
                                                                    <input type="text" class="form-control" name="name" placeholder="New Subject Name" required>
                                                                    <input type="text" class="form-control" name="code" placeholder="Subject Code" required>
                                                                    <button class="btn btn-primary" type="submit">Add Subject</button>
                                                                </div>
                                                            </form>
    
                                                            <!-- List of Subjects -->
                                                            <% course.subjects.forEach(subject => { %>
                                                                <div class="card mb-2">
                                                                    <div class="card-body">
                                                                        <h5 class="card-title">
                                                                            <%= subject.name %> (<%= subject.code %>)
                                                                            <!-- Edit Subject Form -->
                                                                            <form action="/admin/subject/<%= subject._id %>?_method=PUT" method="POST" class="d-inline">
                                                                                <div class="input-group">
                                                                                    <input type="text" class="form-control" name="name" value="<%= subject.name %>" required>
                                                                                    <input type="text" class="form-control" name="code" value="<%= subject.code %>" required>
                                                                                    <button class="btn btn-success" type="submit">Edit</button>
                                                                                </div>
                                                                            </form>
                                                                            <!-- Delete Subject Form -->
                                                                            <form action="/admin/subject/<%= subject._id %>?_method=DELETE" method="POST" class="d-inline">
                                                                                <button class="btn btn-danger" type="submit">Delete</button>
                                                                            </form>
                                                                        </h5>
                                                                    </div>
                                                                </div>
                                                            <% }) %>
                                                        </div>
                                                    </div>
                                                <% }) %>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
    
                            <!-- Add New Department Form -->
                            <form action="/admin/college/<%= college._id %>/department" method="POST" class="mt-3">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="name" placeholder="New Department Name" required>
                                    <button class="btn btn-primary" type="submit">Add Department</button>
                                </div>
                            </form>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-center">No colleges available.</p>
            <% } %>
        </div>
    
    </div>
</div>