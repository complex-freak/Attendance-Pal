<%- include('../partials/teacherHeader') %>

<div class="container-fluid">
    <div class="row">
        <%- include('../components/teacherSidebar') %>

        <div class="content col-md-10 mt-3">
            <section class=" bg-light">
                <div class="row">
                  <div class="col-12 pb-3">
                    <h1 class="h4">Book a Venue</h1>
                    <nav aria-label="breadcrumb">
                      <ol class="breadcrumb m-0 fs-7">
                        <li class="breadcrumb-item"><a class="link-primary text-decoration-none" href="/teacher">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Book Venue</li>
                      </ol>
                    </nav>
                  </div>
                </div>
            </section>

            <!-- Available Venues List -->
            <div class="card mt-4">
                <div class="card-body">
                    <h5 class="card-title">Available Venues</h5>
                    <ul id="venues-list" class="list-group">
                        <!-- List of available venues will be inserted here -->
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Bootstrap 5.3 JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Fetch and display available venues
    function fetchAvailableVenues() {
        fetch('/fetch-available-venues')
            .then(response => response.json())
            .then(data => {
                const list = document.getElementById('venues-list');
                list.innerHTML = ''; // Clear existing list
                data.forEach(venue => {
                    const listItem = document.createElement('li');
                    listItem.className =
                        'list-group-item d-flex justify-content-between align-items-center';
                    listItem.innerHTML = `
                    <p><strong>${venue.name}</strong> (Capacity: ${venue.capacity})</p>
                    <button class="btn btn-primary btn-sm" onclick="bookVenue('${venue.id}')">Book</button>
                `;
                    list.appendChild(listItem);
                });
            })
            .catch(error => console.error('Error fetching venues:', error));
    }

    // Book a venue
    function bookVenue(venueId) {
        fetch('/book-venue', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    venueId: venueId
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    fetchAvailableVenues(); // Refresh the venues list
                } else {
                    alert('Failed to book venue');
                }
            })
            .catch(error => console.error('Error booking venue:', error));
    }

    // Initial fetch to load available venues
    fetchAvailableVenues();
</script>