
<%- include('../partials/navbar.ejs') %>

<div class="section container mt-3">
    <h2>Request Permission for Absence</h2>
    <form id="permission-form" enctype="multipart/form-data"  action="/permission" method="post">
        <div class="mb-3">
            <label for="user-details" class="form-label">Your Registration No.</label>
            <input type="text" class="form-control" id="user-details" name="username"
                placeholder="Enter your details" required>
        </div>
        <div class="mb-3">
            <label for="subject" class="form-label">Subject Code</label>
            <input type="text" class="form-control" id="subject" name="subject"
            placeholder="Enter subject code" required>
        </div>
        <div class="mb-3">
            <label for="absence-reason" class="form-label">Reason for Absence</label>
            <textarea class="form-control" id="absence-reason" name="reason" rows="4"
                placeholder="Explain the reason for your absence" required></textarea>
        </div>
        <div class="mb-3">
            <label for="supporting-file" class="form-label">Attach Supporting File</label>
            <input type="file" class="form-control" id="attachment" name="attachment">
        </div>
        <button type="submit" class="btn btn-primary">Submit Request</button>
    </form>

    <!-- Response Message -->
    <div id="response-message" class="mt-3"></div>
</div>


