
<%- include('../partials/navbar.ejs') %>

<div class="section container mt-3">
    <h2>Request Permission for Absence</h2>
    <form id="permission-form" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="user-details" class="form-label">Your Details</label>
            <input type="text" class="form-control" id="user-details" name="user-details"
                placeholder="Enter your details" required>
        </div>
        <div class="mb-3">
            <label for="absence-reason" class="form-label">Reason for Absence</label>
            <textarea class="form-control" id="absence-reason" name="absence-reason" rows="4"
                placeholder="Explain the reason for your absence" required></textarea>
        </div>
        <div class="mb-3">
            <label for="supporting-file" class="form-label">Attach Supporting File (Optional)</label>
            <input type="file" class="form-control" id="supporting-file" name="supporting-file">
        </div>
        <button type="submit" class="btn btn-primary">Submit Request</button>
    </form>

    <!-- Response Message -->
    <div id="response-message" class="mt-3"></div>
</div>

