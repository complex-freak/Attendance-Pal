<%- include('./partials/header') %>
<%- include('./partials/navbar') %>

<div class="container mt-5">
    <h2 class="text-center">Book a Venue</h2>

    <!-- Available Venues List -->
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Available Venues</h5>
            <ul id="venues-list" class="list-group">
                <!-- List of available venues will be inserted here -->
            </ul>
        </div>
    </div>
</div>

<!-- Bootstrap 5.3 JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Fetch and display available venues
    function fetchAvailableVenues() {
        fetch('/fetch-available-venues')
            .then(response => response.json())
            .then(data => {
                const list = document.getElementById('venues-list');
                list.innerHTML = ''; // Clear existing list
                data.forEach(venue => {
                    const listItem = document.createElement('li');
                    listItem.className =
                    'list-group-item d-flex justify-content-between align-items-center';
                    listItem.innerHTML = `
                    <p><strong>${venue.name}</strong> (Capacity: ${venue.capacity})</p>
                    <button class="btn btn-primary btn-sm" onclick="bookVenue('${venue.id}')">Book</button>
                `;
                    list.appendChild(listItem);
                });
            })
            .catch(error => console.error('Error fetching venues:', error));
    }

    // Book a venue
    function bookVenue(venueId) {
        fetch('/book-venue', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    venueId: venueId
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    fetchAvailableVenues(); // Refresh the venues list
                } else {
                    alert('Failed to book venue');
                }
            })
            .catch(error => console.error('Error booking venue:', error));
    }

    // Initial fetch to load available venues
    fetchAvailableVenues();
</script>

